<style>
    .flashh{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 50px;
        width: 300px;
        background-color: rgb(19, 240, 155);

        position:fixed;
        top: 0;
        right: 0;
        z-index: 2;
        margin: 0.75rem 0.75rem 0 0;
    }
    .msg{
        background: transparent;
        padding: 0.5rem 0.5rem;
    }
    .progress-loader {
        top: 50%;
        left: 50%;
        position: absolute;
        transform: translate(-50%, -50%);
        }

.progress-loader {
  width: 300px;
  background: rgba(236, 236, 238, 0.253);
  height: 3px;
  border-radius: 7px;
}

.progress {
  content: '';
  width: 1px;
  height: 3px;
  border-radius: 7px;
  background: hsl(157, 88%, 21%);
  transition: 0.5s;
  animation: loading1274 2s ease infinite;
}

@keyframes loading1274 {
  0% {
    width: 0%;
  }

  10% {
    width: 10%;
  }

  30%{
    width: 30%;
  }

  50% {
    width: 40%;
  }

  60% {
    width: 60%;
  }

  80% {
    width: 80%;
  }

  100% {
    width: 100%;
  }
}
</style>

<% if(success && success.length>0) { %>
    <div class="flashh">
        <div class="msg">
            <%=success%>
        </div>
        <div class="progress"></div>
    </div>
<% } %>

<% if(error && error.length>0) { %>
    <div class="flashh">
        <div class="msg">
            <%=error%>
        </div>
        <div class="progress"></div>
    </div>
<% } %>

<script>
    let flash = document.querySelector('.flashh');
    setTimeout(() => {
    if (flash) {
        flash.remove();
    }
    }, 2000);

</script>