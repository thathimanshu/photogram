<% layout("/layouts/boilerplate")%>
<style>
    .post{
        border: 4px solid black;
        height: 250px;
        width: 250px;
        margin-top: 10px;
    }
    img{
        height: 90px;
        width: auto;
    }
</style>
<div class="allposts offset-4">
        <% for(let post of posts) {%>
            <a href="/posts/<%=post._id%>">
                <div class="post">
                    <img src="<%=post.imageUrl%>">
                    <p><%=post.username%></p>
                      <p><%=post.caption%></p>
                      <p><%=Date.now()-post.createdAt%></p>
                </div>
            </a>

        <% }%>
</div>
