<% layout("/layouts/boilerplate")%>
<style>
    .card{
        border: 1px solid rgba(0, 0, 0, 0.25) !important;
        height: 500px;
        width: 500px;
        margin-top: 10px;
        
    }
    .pp{
        height: 30px;
        width: 30px;
        border-radius: 50%;
    }

    .card-top{
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.6rem 0.6rem;
    }

    .mid-icons{
        display: flex;
        justify-content: space-between;
    }
    .username{
        text-decoration: none;
        color: black;
    }
    .img-container{
        height: 350px;
        width: 500px;
        
    }
    .post-img{
        height: 100%;
        width: 100%;
        object-fit:cover;
        position: relative;
    }
    
</style>
<div class="allposts offset-3">
        <% for(let post of posts) {%>
            <div class="card">
                <div class="card-top">
                    <div>
                        <img class="pp card-img-top" src="<%=post.imageUrl%>">
                        <a class="username" href="/<%=post.username%>"><%=post.username%></a>
                    </div>
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                </div>
                <div class="img-container">
                    <img class="post-img" src="<%=post.imageUrl%>">
                </div>
                <div class="card-desc1">
                    <div class="mid-icons">
                        <i class="fa-regular fa-heart"></i>
                        <i class="fa-regular fa-comment"></i>
                    </div>   
                    <i class="fa-regular fa-bookmark"></i> 
                </div>
            </div>
        <% }%>
</div>
